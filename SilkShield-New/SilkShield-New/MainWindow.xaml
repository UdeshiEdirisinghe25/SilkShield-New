                <fa:FontAwesome Icon="Lock" FontSize="16" Foreground="Gray" HorizontalAlignment="Left" Margin="-54,76,0,-10"/>
                <TextBox Style="{StaticResource CurvedTextBoxStyle}" Margin="-34,67,-56,-19" Grid.ColumnSpan="2"/>
            </Grid>

            <Button x:Name="LoginButton" Content="LOG IN" Style="{StaticResource CurvedButtonStyle}" HorizontalAlignment="Left" Height="42" Margin="130,500,0,0" FontWeight="Bold" VerticalAlignment="Top" Width="337" Background="#FF111111" Foreground="#FFFCF3F3"/>
