                    <ImageBrush ImageSource="D:\SILKSHIELD_NEW\SilkShield-New\SilkShield-New\SilkShield-New\Images\IMG_5247.PNG" Stretch="Fill"/>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle RadiusX="140" RadiusY="140" Margin="73,60,65,67">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="D:\SILKSHIELD_NEW\SilkShield-New\SilkShield-New\SilkShield-New\Images\Logo (2).PNG"/>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>

    </Grid>
