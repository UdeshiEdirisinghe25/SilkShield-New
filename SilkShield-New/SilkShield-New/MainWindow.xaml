            <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Width="236" Margin="0,343,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
