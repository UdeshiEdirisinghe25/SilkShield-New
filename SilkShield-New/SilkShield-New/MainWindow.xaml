<Window x:Class="SilkShield_New.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SilkShield_New"
        mc:Ignorable="d"
        Title="Invoice" Height="756" Width="1000">

    <Grid Background="#1c1c1c">

        <Border Background="White" CornerRadius="25" Margin="0,1,0,0" Width="998" Height="730" HorizontalAlignment="Center" VerticalAlignment="Top">

            <Grid>
                <TextBlock Text="Invoice" FontWeight="Bold" FontSize="32" Margin="30,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <Grid Margin="30,80,30,0" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,20">
                        <TextBlock Text="Invoice Number" FontWeight="SemiBold"/>
                        <TextBox x:Name="InvoiceNumberBox" Text="INV-1001" Margin="0,5,0,0" Padding="5" BorderBrush="LightGray" BorderThickness="1" />
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,20">
                        <TextBlock Text="Date" FontWeight="SemiBold"/>
                        <TextBox x:Name="DateBox" Text="2024-04-22" Margin="0,5,0,0" Padding="5" BorderBrush="LightGray" BorderThickness="1"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,20">
                        <TextBlock Text="Customer" FontWeight="SemiBold"/>
                        <TextBox x:Name="CustomerBox" Margin="0,5,0,0" Padding="5" BorderBrush="LightGray" BorderThickness="1"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,20">
                        <TextBlock Text="Building Type" FontWeight="SemiBold"/>
                        <TextBox x:Name="BuildingTypeBox" Margin="0,5,0,0" Padding="5" BorderBrush="LightGray" BorderThickness="1"/>
                    </StackPanel>

                    <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid x:Name="InvoiceDataGrid" Grid.Row="1" AutoGenerateColumns="True" CanUserAddRows="False" Margin="0,5,0,5" />

                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,10,0,0">
                            <TextBox x:Name="ItemNameBox" Margin="5" Width="200" HorizontalAlignment="Left" d:Text="Item Name"/>
                            <TextBox x:Name="QuantityBox" Margin="5" Width="80" HorizontalAlignment="Left" d:Text="Qty"/>
                            <TextBox x:Name="UnitPriceBox" Margin="5" Width="100" HorizontalAlignment="Left" d:Text="Price"/>
                            <Button x:Name="AddItemButton" Content="+ Add Item" Margin="5,0,0,0" Click="AddItemButton_Click" />
                        </StackPanel>

                    </Grid>

                    <Grid Grid.Row="3" Grid.ColumnSpan="2" VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,20">
                            <TextBlock Text="Payment Method" FontWeight="SemiBold"/>
                            <ComboBox x:Name="PaymentMethodCombo" Margin="0,5,0,0" Padding="5" BorderBrush="LightGray" BorderThickness="1">
                                <ComboBoxItem Content="Cash" IsSelected="True"/>
                                <ComboBoxItem Content="Card"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,20">
                            <TextBlock Text="Discount" FontWeight="SemiBold"/>
                            <TextBox x:Name="DiscountBox" Text="0.00" Margin="0,5,0,0" Padding="5" BorderBrush="LightGray" BorderThickness="1" TextChanged="CalculateTotal"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid Margin="0,0,30,30" HorizontalAlignment="Right" VerticalAlignment="Bottom" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Amount" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    <TextBlock x:Name="TotalAmountText" Grid.Row="0" Grid.Column="1" Text="$0.00" HorizontalAlignment="Right"/>

                    <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="Create" Foreground="White" Width="100" Height="34" Margin="0,20,0,0" HorizontalAlignment="Right" >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="ButtonBorder" Background="Black" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>