<Window x:Class="SilkShield_New.View.NewInvoice1" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:SilkShield_New.View" 
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d" 
        Title="NewInvoice1" Height="650" Width="900" 
        Background="Transparent" WindowStyle="None" AllowsTransparency="True">
    <Grid>
        <!-- The main content border, which gives the rounded white background -->
        <Border Background="White" CornerRadius="50" Margin="50">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <!-- Invoice title row -->
                    <RowDefinition Height="Auto"/>
                    <!-- Top section with invoice number and date -->
                    <RowDefinition Height="Auto"/>
                    <!-- Invoice items table row -->
                    <RowDefinition/>
                    <!-- Add Item Button row -->
                    <RowDefinition Height="Auto" MinHeight="28.62"/>
                    <!-- Payment and discount row -->
                    <RowDefinition Height="Auto" MinHeight="79"/>
                    <!-- Total amount and create button row -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Invoice Title -->
                <TextBlock Text="Invoice" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20" Grid.Row="0"/>

                <!-- Top section with Invoice Number, Date, Customer, and Building Type -->
                <Grid Grid.Row="1" Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Invoice Number Field -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Invoice Number" Foreground="#555" Margin="0,0,0,5"/>
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Background="White">
                            <TextBox Text="INV-1001" Padding="8" BorderBrush="Transparent" BorderThickness="0"/>
                        </Border>
                    </StackPanel>

                    <!-- Date Field - now a DatePicker -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Text="Date" Foreground="#555" Margin="0,0,0,5"/>
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Background="White">
                            <DatePicker SelectedDate="{x:Static sys:DateTime.Now}" Padding="8" BorderBrush="Transparent" BorderThickness="0"/>
                        </Border>
                    </StackPanel>

                    <!-- Customer Field - now a TextBox -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,15,20,0">
                        <TextBlock Text="Customer" Foreground="#555" Margin="0,0,0,5"/>
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Background="White">
                            <TextBox Text="John Doe" Padding="8" BorderBrush="Transparent" BorderThickness="0"/>
                        </Border>
                    </StackPanel>

                    <!-- Building Type Field -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="20,15,0,0">
                        <TextBlock Text="Building Type" Foreground="#555" Margin="0,0,0,5"/>
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Background="White">
                            <TextBox Padding="8" BorderBrush="Transparent" BorderThickness="0"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Invoice Items Table -->
                <DataGrid x:Name="ItemDataGrid" 
                          Grid.Row="2" 
                          Margin="0,7,0,20" 
                          BorderBrush="#ddd" 
                          BorderThickness="1" 
                          Background="White" 
                          AutoGenerateColumns="False" 
                          HeadersVisibility="Column"
                          CanUserAddRows="True" 
                          CanUserDeleteRows="True"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#eee"
                          VerticalGridLinesBrush="#eee"
                          IsTabStop="False"
                          KeyDown="ItemDataGrid_KeyDown">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Item Name" Width="2*" Binding="{Binding ItemName}"/>
                        <DataGridTextColumn Header="Quantity" Width="*" Binding="{Binding Quantity}"/>
                        <DataGridTextColumn Header="Unit Price" Width="*" Binding="{Binding UnitPrice}"/>
                        <DataGridTextColumn Header="Total" Width="*" Binding="{Binding Total}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Add Item Button -->
                <Button Grid.Row="3" 
                        HorizontalAlignment="Right" 
                        Content="+ Add Item" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Foreground="#3498db" 
                        FontWeight="Bold" 
                        FontSize="14" 
                        Cursor="Hand" 
                        Margin="0,10,0,0" 
                        Width="75"
                        Click="AddItem_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock Text="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Payment Method and Discount Section -->
                <Grid Grid.Row="4" Margin="0,20,0,0" VerticalAlignment="Top" Height="59">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Payment Method" Foreground="#555" Margin="0,0,0,5"/>
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Background="White" Padding="8">
                            <!-- Payment Method - now a standard ComboBox with options -->
                            <ComboBox Padding="8" BorderBrush="Transparent" BorderThickness="0">
                                <ComboBoxItem Content="Cash" IsSelected="True"/>
                                <ComboBoxItem Content="Card"/>
                                <ComboBoxItem Content="Bank Transfer"/>
                            </ComboBox>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Text="Discount" Foreground="#555" Margin="0,0,0,5"/>
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Background="White" Padding="8">
                            <TextBox BorderBrush="Transparent" BorderThickness="0"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Total Amount and Create Button Section -->
                <Grid Grid.Row="5" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Total Amount" VerticalAlignment="Center" FontSize="18" FontWeight="SemiBold" Margin="0,0,20,0"/>
                        <TextBlock Text="$5000.00" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#333"/>
                    </StackPanel>

                    <Button Grid.Column="1" Content="Create" 
                            Background="#2980b9" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            FontSize="16" 
                            Cursor="Hand" 
                            Width="100" 
                            Height="40" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Bottom" 
                            Margin="0,10,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
