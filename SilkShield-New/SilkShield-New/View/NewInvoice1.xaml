<Window x:Class="SilkShield_New.View.NewInvoice1" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:SilkShield_New.View" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d" 
        Title="NewInvoice1" Height="650" Width="900" 
        Background="Transparent" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        <Border Background="White" CornerRadius="50" Margin="50">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto" MinHeight="28.62"/>
                    <RowDefinition Height="Auto" MinHeight="79"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Margin="0,0,0,20" FontSize="28" FontWeight="Bold" Foreground="#333" Text="Invoice"/>

                <Grid Grid.Row="1" Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Margin="0,0,0,5" Foreground="#555" Text="Invoice Number"/>
                        <Border Background="White" BorderBrush="#ccc" BorderThickness="1" CornerRadius="5">
                            <TextBox Padding="8" BorderBrush="Transparent" BorderThickness="0" Text="INV-1001"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Margin="0,0,0,5" Foreground="#555" Text="Date"/>
                        <Border Background="White" BorderBrush="#ccc" BorderThickness="1" CornerRadius="5">
                            <DatePicker Padding="8" BorderBrush="Transparent" BorderThickness="0" SelectedDate="{x:Static sys:DateTime.Now}"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,15,20,0">
                        <TextBlock Margin="0,0,0,5" Foreground="#555" Text="Customer"/>
                        <Border Background="White" BorderBrush="#ccc" BorderThickness="1" CornerRadius="5">
                            <TextBox Padding="8" BorderBrush="Transparent" BorderThickness="0" Text="John Doe"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="20,15,0,0">
                        <TextBlock Margin="0,0,0,5" Foreground="#555" Text="Building Type"/>
                        <Border Background="White" BorderBrush="#ccc" BorderThickness="1" CornerRadius="5">
                            <TextBox Padding="8" BorderBrush="Transparent" BorderThickness="0"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <DataGrid x:Name="ItemDataGrid" 
                          Grid.Row="2" 
                          Margin="0,7,0,20" 
                          AutoGenerateColumns="False" 
                          Background="White" 
                          BorderBrush="#ddd" 
                          BorderThickness="1" 
                          CanUserAddRows="True" 
                          CanUserDeleteRows="True" 
                          HeadersVisibility="Column" 
                          HorizontalGridLinesBrush="#eee" 
                          IsTabStop="False" 
                          VerticalGridLinesBrush="#eee"
                          GridLinesVisibility="Horizontal"
                          KeyDown="ItemDataGrid_KeyDown">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="2*"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                        <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding Total}" IsReadOnly="True" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Grid.Row="3" 
                        HorizontalAlignment="Right" 
                        Width="75"
                        Content="+ Add Item" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Click="AddItem_Click" 
                        Cursor="Hand" 
                        FontSize="14" 
                        FontWeight="Bold" 
                        Foreground="#FF5B281C" 
                        Margin="0,10,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock HorizontalAlignment="Center" Text="{TemplateBinding Content}" VerticalAlignment="Center"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Grid Grid.Row="4" Margin="0,20,0,0" Height="59" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Margin="0,0,0,5" Foreground="#555" Text="Payment Method"/>
                        <Border Background="White" BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Padding="8">
                            <ComboBox Padding="8" BorderBrush="Transparent" BorderThickness="0">
                                <ComboBoxItem Content="Cash" IsSelected="True"/>
                                <ComboBoxItem Content="Card"/>
                                <ComboBoxItem Content="Bank Transfer"/>
                            </ComboBox>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Margin="0,0,0,5" Foreground="#555" Text="Discount"/>
                        <Border Background="White" BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Padding="8">
                            <TextBox x:Name="DiscountTextBox" BorderBrush="Transparent" BorderThickness="0" TextChanged="Discount_TextChanged"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="5" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Margin="0,0,20,0" FontSize="18" FontWeight="SemiBold" Text="Total Amount" VerticalAlignment="Center"/>
                        <TextBlock FontSize="20" FontWeight="Bold" Foreground="#333" Text="{Binding GrandTotal, StringFormat=LKR  \.}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button Grid.Column="1" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Bottom"
                            Width="100" 
                            Height="40" 
                            Margin="0,10,0,0"
                            Background="#FF5B281C" 
                            Content="Create" 
                            Cursor="Hand" 
                            FontSize="16" 
                            FontWeight="Bold" 
                            Foreground="White">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>