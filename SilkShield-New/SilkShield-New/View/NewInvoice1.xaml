<Window x:Class="SilkShield_New.View.NewInvoice1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SilkShield_New.View"
        mc:Ignorable="d"
        Title="NewInvoice1" Height="650" Width="900"
        Background="Transparent" WindowStyle="None" AllowsTransparency="True">
    <Grid>
        <!-- The main content border, which gives the rounded white background -->
        <Border Background="White" CornerRadius="50" Margin="50">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <!-- Invoice title row -->
                    <RowDefinition Height="Auto"/>
                    <!-- Top section with invoice number and date -->
                    <RowDefinition Height="Auto"/>
                    <!-- Invoice items table row -->
                    <RowDefinition Height="*"/>
                    <!-- Add Item Button row -->
                    <RowDefinition Height="Auto"/>
                    <!-- Payment and discount row -->
                    <RowDefinition Height="Auto"/>
                    <!-- Total amount and create button row -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Invoice Title -->
                <TextBlock Text="Invoice" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20" Grid.Row="0"/>

                <!-- Top section with Invoice Number, Date, Customer, and Building Type -->
                <Grid Grid.Row="1" Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Invoice Number Field -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Invoice Number" Foreground="#555" Margin="0,0,0,5"/>
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Background="White">
                            <TextBox Text="INV-1001" Padding="8" BorderBrush="Transparent" BorderThickness="0"/>
                        </Border>
                    </StackPanel>

                    <!-- Date Field -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Text="Date" Foreground="#555" Margin="0,0,0,5"/>
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Background="White">
                            <TextBox Text="2024-04-22" Padding="8" BorderBrush="Transparent" BorderThickness="0"/>
                        </Border>
                    </StackPanel>

                    <!-- Customer Field -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,15,20,0">
                        <TextBlock Text="Customer" Foreground="#555" Margin="0,0,0,5"/>
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Background="White" Padding="8">
                            <ComboBox IsEditable="True" Text="John Doe" BorderBrush="Transparent" BorderThickness="0"/>
                        </Border>
                    </StackPanel>

                    <!-- Building Type Field -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="20,15,0,0">
                        <TextBlock Text="Building Type" Foreground="#555" Margin="0,0,0,5"/>
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Background="White">
                            <TextBox Padding="8" BorderBrush="Transparent" BorderThickness="0"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Invoice Items Table -->
                <Border Grid.Row="2" Margin="0,25" BorderBrush="#ddd" BorderThickness="1" CornerRadius="5">
                    <StackPanel>
                        <!-- Table Headers -->
                        <Grid Background="#f0f0f0" Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Item Name" FontWeight="SemiBold" Foreground="#333" Margin="0,10"/>
                            <TextBlock Grid.Column="1" Text="Quantity" FontWeight="SemiBold" Foreground="#333" Margin="0,10"/>
                            <TextBlock Grid.Column="2" Text="Unit Price" FontWeight="SemiBold" Foreground="#333" Margin="0,10"/>
                            <TextBlock Grid.Column="3" Text="Total" FontWeight="SemiBold" Foreground="#333" Margin="0,10"/>
                        </Grid>
                        <!-- Sample Item Row -->
                        <Grid Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Silk Roll" Margin="0,10,20,10"/>
                            <TextBlock Grid.Column="1" Text="10" Margin="0,10"/>
                            <TextBlock Grid.Column="2" Text="$500.00" Margin="0,10"/>
                            <TextBlock Grid.Column="3" Text="$5000.00" Margin="0,10"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Add Item Button -->
                <Button Grid.Row="3" HorizontalAlignment="Right" Content="+ Add Item"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#3498db"
                        FontWeight="Bold"
                        FontSize="14"
                        Cursor="Hand"
                        Margin="0,10,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock Text="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Payment Method and Discount Section -->
                <Grid Grid.Row="4" Margin="0,20,0,0" VerticalAlignment="Bottom">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Payment Method" Foreground="#555" Margin="0,0,0,5"/>
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Background="White" Padding="8">
                            <ComboBox IsEditable="True" Text="Cash" BorderBrush="Transparent" BorderThickness="0"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Text="Discount" Foreground="#555" Margin="0,0,0,5"/>
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Background="White" Padding="8">
                            <TextBox BorderBrush="Transparent" BorderThickness="0"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Total Amount and Create Button Section -->
                <Grid Grid.Row="5" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Total Amount" VerticalAlignment="Center" FontSize="18" FontWeight="SemiBold" Margin="0,0,20,0"/>
                        <TextBlock Text="$5000.00" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#333"/>
                    </StackPanel>

                    <Button Grid.Column="1" Content="Create"
                            Background="#2980b9"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="16"
                            Cursor="Hand"
                            Width="100"
                            Height="40"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Margin="0,10,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</Window>
