<Window x:Class="SilkShield_New.View.NewInvoice1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SilkShield_New.View"
        xmlns:vm="clr-namespace:SilkShield_New.ViewModel"
        mc:Ignorable="d"
        Title="New Invoice"
        Width="900" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="White"
        d:DataContext="{d:DesignInstance vm:NewInvoice1ViewModel}">

    <Window.Resources>
        <Style x:Key="ResetLinkStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#007ACC"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" TextDecorations="Underline"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FF5B281C"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Border Background="White" Padding="20" BorderBrush="#ccc" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Invoice Info -->
                    <Grid Grid.Row="0" Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Margin="0,0,0,5" Foreground="#555" Text="Invoice Number"/>
                            <TextBox Padding="8" BorderBrush="#ccc" BorderThickness="1" Text="{Binding InvoiceNumber, Mode=TwoWay}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock Margin="0,0,0,5" Foreground="#555" Text="Date"/>
                            <DatePicker Padding="8" SelectedDate="{Binding InvoiceDate, Mode=TwoWay}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,15,20,0">
                            <TextBlock Margin="0,0,0,5" Foreground="#555" Text="Customer"/>
                            <TextBox Padding="8" BorderBrush="#ccc" BorderThickness="1" Text="{Binding CustomerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="20,15,0,0">
                            <TextBlock Margin="0,0,0,5" Foreground="#555" Text="Building Type"/>
                            <ComboBox Padding="8" BorderBrush="#ccc" BorderThickness="1" SelectedValue="{Binding BuildingType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <ComboBoxItem Content="House"/>
                                <ComboBoxItem Content="Apartment"/>
                                <ComboBoxItem Content="Commercial"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Items DataGrid & Add Item Button -->
                    <StackPanel Grid.Row="1" Margin="0,7,0,0">
                        <DataGrid x:Name="ItemDataGrid"
                                  AutoGenerateColumns="False"
                                  Background="White"
                                  BorderBrush="#ddd"
                                  BorderThickness="1"
                                  CanUserAddRows="True"
                                  CanUserDeleteRows="True"
                                  HeadersVisibility="Column"
                                  HorizontalGridLinesBrush="#eee"
                                  VerticalGridLinesBrush="#eee"
                                  GridLinesVisibility="All"
                                  ItemsSource="{Binding Items}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Item Name" Width="2*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ItemName}" VerticalAlignment="Center" Margin="5,0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <ComboBox ItemsSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=DataContext.AvailableItems}"
                                                      SelectedItem="{Binding ItemName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="Material" Binding="{Binding Material}" Width="*" />

                                <!-- Add the new column for Measuring Unit -->
                                <DataGridTextColumn Header="Measuring Unit" Binding="{Binding MeasuringUnit}" Width="*" />

                                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                                <DataGridTextColumn Header="Total" Binding="{Binding Total}" IsReadOnly="True" Width="*"/>

                                <DataGridTemplateColumn Header="Delete" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=DataContext.DeleteItemCommand}"
                                                    CommandParameter="{Binding}"
                                                    Cursor="Hand"
                                                    Background="Transparent"
                                                    BorderThickness="0">
                                                <Grid Width="12" Height="12" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Path Data="M3,6 L5,6 L21,6 M19,6 L17,20 C17,21.1 16.1,22 15,22 L7,22 C5.9,22 5,21.1 5,20 L3,6 M10,11 L10,17 M14,11 L14,17"
                                                          Fill="Gray" Stretch="Uniform"/>
                                                </Grid>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Moved + ADD ITEM button here -->
                        <Button Content="+ ADD ITEM"
                                Command="{Binding AddItemCommand}"
                                Style="{StaticResource AddButtonStyle}"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0"/>

                    </StackPanel>

                    <!-- Curtain, Payment, Transport & Discount -->
                    <Grid Grid.Row="2" Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Margin="0,0,0,5" Foreground="#555" Text="Curtain Type &amp; Style"/>
                            <StackPanel Orientation="Horizontal">
                                <ComboBox Padding="8" Width="90" SelectedValue="{Binding CurtainLayerType, Mode=TwoWay}" Margin="0,0,10,0">
                                    <ComboBoxItem Content="Single layer"/>
                                    <ComboBoxItem Content="Double layer"/>
                                    <ComboBoxItem Content="Triple layer"/>
                                </ComboBox>
                                <ComboBox Padding="8" Width="120" SelectedValue="{Binding CurtainStyle, Mode=TwoWay}">
                                    <ComboBoxItem Content="Ripple"/>
                                    <ComboBoxItem Content="Pleat"/>
                                    <ComboBoxItem Content="Eyelet"/>
                                    <ComboBoxItem Content="Roman Blinds"/>
                                    <ComboBoxItem Content="Venetian Blinds"/>
                                    <ComboBoxItem Content="Zebra Blinds"/>
                                    <ComboBoxItem Content="Roller Blinds"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <CheckBox IsChecked="{Binding IsPelmetBoardChecked, Mode=TwoWay}" Content="Pelmet Board" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                <CheckBox IsChecked="{Binding IsMotorizedChecked, Mode=TwoWay}" Content="Motorized" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="20,0,20,0">
                            <TextBlock Margin="0,0,0,5" Foreground="#555" Text="Payment Method"/>
                            <ComboBox Padding="8" SelectedValue="{Binding PaymentMethod, Mode=TwoWay}">
                                <ComboBoxItem Content="Cash"/>
                                <ComboBoxItem Content="Card"/>
                                <ComboBoxItem Content="Bank Transfer"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Margin="0,0,0,5" Foreground="#555" Text="Transport &amp; Labor Cost (LKR)"/>
                            <TextBox Padding="8" BorderBrush="#ccc" BorderThickness="1" Text="{Binding TransportLaborCostText, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Margin="0,15,0,5" Foreground="#555" Text="Discount (%)"/>
                            <TextBox Padding="8" BorderBrush="#ccc" BorderThickness="1" Text="{Binding DiscountText, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Margin="0,15,0,5" Foreground="#555" Text="Total Amount (LKR)"/>
                            <TextBlock FontWeight="Bold" FontSize="20" Foreground="#333" Text="{Binding GrandTotal, StringFormat={}{0:F2}}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Bottom buttons -->
                    <Grid Grid.Row="3" Margin="0,30,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left side: Reset -->
                        <Button Grid.Column="0" Content="Reset"
                                Command="{Binding ClearFormCommand}"
                                Style="{StaticResource ResetLinkStyle}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"/>

                        <!-- Right side: Create -->
                        <Button Grid.Column="1"
                                HorizontalAlignment="Right"
                                Width="100" Height="40"
                                Margin="0,10,0,0"
                                Background="#FF5B281C"
                                Content="Create"
                                Cursor="Hand"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="White"
                                Command="{Binding CreateInvoiceCommand}"
                                RenderTransformOrigin="0.5,0.5">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="10"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
