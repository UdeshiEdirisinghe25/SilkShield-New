<UserControl x:Class="SilkShield_New.View.DashboardWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White" >

    <UserControl.Resources>
        <!-- Color & Gradient Resources -->
        <SolidColorBrush x:Key="GreyBrush" Color="#7B809A"/>
        <SolidColorBrush x:Key="DarkBlueBrush" Color="#344767"/>
        <SolidColorBrush x:Key="LightGreyBrush" Color="#F0F2F5"/>
        <LinearGradientBrush x:Key="RedGradientBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#E93B77" Offset="0"/>
            <GradientStop Color="#DA1F63" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GreenGradientBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#63B967" Offset="0"/>
            <GradientStop Color="#4BA64F" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="BlackGradientBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#3E3D45" Offset="0"/>
            <GradientStop Color="#202020" Offset="1"/>
        </LinearGradientBrush>

        <!-- Card Style -->
        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000" BlurRadius="6" ShadowDepth="2" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="44.4"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="Auto" MinHeight="197"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Dashboard" FontFamily="Roboto" FontSize="32" 
                       FontWeight="SemiBold" Foreground="{StaticResource DarkBlueBrush}" VerticalAlignment="Center"/>
        </Grid>

        <!-- Metric Cards -->
        <UniformGrid Columns="3" Margin="0,24,0,30" Grid.RowSpan="2" Grid.Row="1">
            <!-- Card 1 -->
            <Border Style="{StaticResource MetricCardStyle}" Height="167">
                <Grid>
                    <Border Grid.Row="0" Background="{StaticResource RedGradientBrush}" CornerRadius="8" Height="96" Margin="9,11,9,0"/>
                    <TextBlock Text="Upcoming projects" FontFamily="Roboto" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DarkBlueBrush}" Margin="13,100,0,0"/>
                </Grid>
            </Border>

            <!-- Card 2 -->
            <Border Style="{StaticResource MetricCardStyle}" Height="167">
                <Grid>
                    <Border Grid.Row="0" Background="{StaticResource GreenGradientBrush}" CornerRadius="8" Height="96" Margin="9,11,9,0"/>
                    <TextBlock Text="ongoing project" FontFamily="Roboto" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DarkBlueBrush}" Margin="13,100,0,0"/>
                </Grid>
            </Border>

            <!-- Card 3 -->
            <Border Style="{StaticResource MetricCardStyle}" Height="167">
                <Grid>
                    <Border Grid.Row="0" Background="{StaticResource BlackGradientBrush}" CornerRadius="8" Height="96" Margin="9,11,9,0"/>
                    <TextBlock Text="Completed Tasks" FontFamily="Roboto" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DarkBlueBrush}" Margin="13,100,0,0"/>
                </Grid>
            </Border>
        </UniformGrid>

        <!-- Additional Content -->
        <Border Grid.Row="2" Background="{StaticResource LightGreyBrush}" CornerRadius="15" Padding="20" Margin="0,197,0,0" Grid.RowSpan="2">
            <TextBlock Text=" " 
                       FontFamily="Roboto" FontSize="16" Foreground="{StaticResource GreyBrush}" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
