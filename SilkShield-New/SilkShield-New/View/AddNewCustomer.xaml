<Window x:Class="SilkShield_New.View.AddNewCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AddNewCustomer" 
        Height="650" 
        Width="900"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Label Style -->
        <Style x:Key="InputLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- TextBox Style with Placeholder -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Tag" Value="Placeholder text"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="TextBoxBorder"
                                Background="#F5F5F5"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1"
                                CornerRadius="10">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" />
                                <TextBlock x:Name="Placeholder"
                                           Text="{TemplateBinding Tag}"
                                           Foreground="#A0A0A0"
                                           VerticalAlignment="Center"
                                           Margin="15,0,0,0"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D7" TargetName="TextBoxBorder"/>
                                <Setter Property="Background" Value="White" TargetName="TextBoxBorder"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="InputComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="New Customers" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="#333333" 
                       VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="10,-26,-10,0"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>

        <!-- Form -->
        <Border Background="White" CornerRadius="20" Padding="30" Margin="0,23,0,81" Grid.RowSpan="3">
            <StackPanel>

                <TextBlock Text="Customer" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#333333" Height="34" 
                           />

                <TextBlock Text="Enter the new customer's information below." 
                           FontSize="14" 
                           Foreground="#666666" 
                           TextWrapping="Wrap" 
                           Margin="0,0,0,25"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <!-- NEW Row for Quotation Status -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Customer Name -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Customer Name" Style="{StaticResource InputLabelStyle}"/>
                        <TextBox Style="{StaticResource InputFieldStyle}" Tag="Enter Name" Height="37"/>
                    </StackPanel>

                    <!-- Customer Type -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Customer Type" Style="{StaticResource InputLabelStyle}"/>
                        <ComboBox Style="{StaticResource InputComboBoxStyle}" Height="30">
                            <ComboBoxItem Content="Individual"/>
                            <ComboBoxItem Content="Business"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Contact Number -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Contact Number" Style="{StaticResource InputLabelStyle}"/>
                        <TextBox Style="{StaticResource InputFieldStyle}" Tag="Conatact Number" Height="34"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Email" Style="{StaticResource InputLabelStyle}"/>
                        <TextBox Style="{StaticResource InputFieldStyle}" Tag="Enter Email" Height="37"/>
                    </StackPanel>

                    <!-- Address -->
                    <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,20">
                        <TextBlock Text="Address" Style="{StaticResource InputLabelStyle}"/>
                        <TextBox Style="{StaticResource InputFieldStyle}" 
                                 Height="39" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto" 
                                 Tag="Input address" Width="371" HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Visit Status -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Visit Status" Style="{StaticResource InputLabelStyle}"/>
                        <ComboBox Style="{StaticResource InputComboBoxStyle}" Height="29" Width="370" HorizontalAlignment="Left">
                            <ComboBoxItem Content="Visited"/>
                            <ComboBoxItem Content="Not Visited"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Project Confirmation Status -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Project Confirmation Status" Style="{StaticResource InputLabelStyle}"/>
                        <ComboBox Style="{StaticResource InputComboBoxStyle}" Height="29" Width="370" HorizontalAlignment="Left">
                            <ComboBoxItem Content="Confirmed"/>
                            <ComboBoxItem Content="Pending"/>
                            <ComboBoxItem Content="Rejected"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Quotation Status -->
                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Quotation Status" Style="{StaticResource InputLabelStyle}"/>
                        <ComboBox Style="{StaticResource InputComboBoxStyle}" Height="29" Width="370" HorizontalAlignment="Left">
                            <ComboBoxItem Content="Sent"/>
                            <ComboBoxItem Content="Pending"/>
                            <ComboBoxItem Content="Approved"/>
                            <ComboBoxItem Content="Rejected"/>
                        </ComboBox>
                    </StackPanel>


                </Grid>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,9" >
            <!-- Cancel Button -->
            <Button Content="Cancel"
            Background="#AAAAAA"
            Foreground="White"
            BorderThickness="0"
            FontSize="16"
            FontWeight="Bold"
            Padding="30,15"
            Margin="0,0,10,0">
                <!-- spacing between buttons -->
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Save Button -->
            <Button Content="Save Customer"
            Background="#333333"
            Foreground="White"
            BorderThickness="0"
            FontSize="16"
            FontWeight="Bold"
            Padding="30,15">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,9" >
            <!-- Cancel Button -->
            <Button Content="Cancel"
            Background="#AAAAAA"
            Foreground="White"
            BorderThickness="0"
            FontSize="16"
            FontWeight="Bold"
            Padding="30,15"
            Margin="0,0,10,0">
                <!-- spacing between buttons -->
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Save Button -->
            <Button Content="Save Customer"
            Background="#333333"
            Foreground="White"
            BorderThickness="0"
            FontSize="16"
            FontWeight="Bold"
            Padding="30,15">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

    </Grid>
</Window>
