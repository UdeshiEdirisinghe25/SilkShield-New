<Window x:Class="SilkShield_New.View.Inventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Inventory" Height="696" Width="847"
        WindowStartupLocation="CenterScreen" Background="#FFFFFF">
    <Window.Resources>
        <!-- Palette -->
        <Color x:Key="Clr.Text">#1F2937</Color>
        <Color x:Key="Clr.Muted">#667085</Color>
        <Color x:Key="Clr.Border">#E5E7EB</Color>
        <Color x:Key="Clr.Accent">#C27B26</Color>
        <SolidColorBrush x:Key="Clr.SuccessDot" Color="#22C55E"/>
        <SolidColorBrush x:Key="Clr.SuccessBg" Color="#EAFBF1"/>
        <SolidColorBrush x:Key="Clr.WarnDot" Color="#F43F5E"/>
        <SolidColorBrush x:Key="Clr.WarnBg" Color="#FEF2F2"/>
        <SolidColorBrush x:Key="Brush.Text" Color="{StaticResource Clr.Text}"/>
        <SolidColorBrush x:Key="Brush.Muted" Color="{StaticResource Clr.Muted}"/>
        <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Clr.Border}"/>
        <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Clr.Accent}"/>
        <FontFamily x:Key="IconFont">Segoe MDL2 Assets</FontFamily>
        <!-- Watermark TextBox (Tag is placeholder) -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="Watermark" Text="{TemplateBinding Tag}"
                                       Margin="10,0" VerticalAlignment="Center"
                                       Foreground="{StaticResource Brush.Muted}" IsHitTestVisible="False" Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#D0D5DD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Simple soft button styles -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.92"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PageButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="36"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Status chips as shapes with editable text -->
        <Style x:Key="StatusChipGreen" TargetType="ContentControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">
                        <Border Background="{StaticResource Clr.SuccessBg}" CornerRadius="10" Padding="8,2">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="{StaticResource Clr.SuccessDot}" Margin="0,0,6,0"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="StatusChipRed" TargetType="ContentControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">
                        <Border Background="{StaticResource Clr.WarnBg}" CornerRadius="10" Padding="8,2">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="{StaticResource Clr.WarnDot}" Margin="0,0,6,0"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Header: title + small search + profile icon -->
        <Grid Margin="20,16,20,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Inventory" FontSize="24" FontWeight="Bold" Foreground="{StaticResource Brush.Text}" VerticalAlignment="Center"/>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="44"/>
                </Grid.ColumnDefinitions>
                <!-- compact search -->
                <Border CornerRadius="10" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" Height="36" Background="#FFFFFF">
                    <Grid Margin="10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" FontFamily="{StaticResource IconFont}" Text="" Foreground="{StaticResource Brush.Muted}" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" BorderThickness="0" Background="Transparent" Style="{StaticResource WatermarkTextBox}" Tag="Search here"/>
                    </Grid>
                </Border>
                <!-- profile -->
                <Border Grid.Column="1" Margin="10,0,0,0" Width="36" Height="36" CornerRadius="18" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" Background="#FFFFFF">
                    <TextBlock Text="👤" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Grid>
        <!-- Card: Search Items + big search + table -->
        <Border Grid.Row="1" Margin="20,0,20,12" Padding="20" CornerRadius="16" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" Background="#FFFFFF">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Search Items" FontWeight="Bold" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"/>
                <Border Grid.Row="1" Margin="0,10,0,0" CornerRadius="12" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" Background="#FFFFFF">
                    <Grid Margin="12,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" FontFamily="{StaticResource IconFont}" Text="" Foreground="{StaticResource Brush.Muted}" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" BorderThickness="0" Background="Transparent" Style="{StaticResource WatermarkTextBox}" Tag="Search by item name..." Height="42"  Text="" />
                    </Grid>
                </Border>
            </Grid>
        </Border>
        <!-- Table -->
        <Border Grid.Row="2" Margin="20,0,20,0" Padding="0" CornerRadius="14" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" Background="#FFFFFF">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Header row -->
                <Grid Grid.Row="0" Height="44" Background="#F8FAFC">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="160"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Item Name" VerticalAlignment="Center" Margin="16,0" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="Stock" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Grid.Column="2" Text="Price" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Grid.Column="3" Text="Status" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Grid.Column="4" Text="Actions" VerticalAlignment="Center"/>
                </Grid>
                <!-- Body rows with drag scroll enabled -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">
                    <StackPanel>
                        <!-- Row 1 -->
                        <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="0,1,0,0">
                            <Grid Height="44">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="160"/>
                                </Grid.ColumnDefinitions>
                                <DockPanel Margin="16,0" VerticalAlignment="Center">
                                    <TextBlock Text="Thick Blankets (Inch 20 Nano-Reduction)"/>
                                </DockPanel>
                                <TextBlock Grid.Column="1" Text="150" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="2,500 LKR" VerticalAlignment="Center"/>
                                <ContentControl Grid.Column="2" VerticalAlignment="Center" Style="{StaticResource StatusChipGreen}" Content="In Stock" Grid.ColumnSpan="2" Margin="140,0,60,0"/>
                                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButton}" Margin="0,0,6,0">
                                        <TextBlock Text="✎"/>
                                    </Button>
                                    <Button Style="{StaticResource IconButton}">
                                        <TextBlock Text="🗑"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <!-- Row 2 -->
                        <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="0,1,0,0">
                            <Grid Height="44">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="160"/>
                                </Grid.ColumnDefinitions>
                                <DockPanel Margin="16,0" VerticalAlignment="Center">
                                    <TextBlock Text="Sheets (Cotton Off-white)"/>
                                </DockPanel>
                                <TextBlock Grid.Column="1" Text="125" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="1,800 LKR" VerticalAlignment="Center"/>
                                <ContentControl Grid.Column="2" VerticalAlignment="Center" Style="{StaticResource StatusChipGreen}" Content="In Stock" Grid.ColumnSpan="2" Margin="140,0,60,0"/>
                                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButton}" Margin="0,0,6,0">
                                        <TextBlock Text="✎"/>
                                    </Button>
                                    <Button Style="{StaticResource IconButton}">
                                        <TextBlock Text="🗑"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <!-- Row 3 -->
                        <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="0,1,0,0">
                            <Grid Height="44">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="160"/>
                                </Grid.ColumnDefinitions>
                                <DockPanel Margin="16,0" VerticalAlignment="Center">
                                    <TextBlock Text="Rubber Bands"/>
                                </DockPanel>
                                <TextBlock Grid.Column="1" Text="25" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="200 LKR" VerticalAlignment="Center"/>
                                <ContentControl Grid.Column="2" VerticalAlignment="Center" Style="{StaticResource StatusChipRed}" Content="Low Stock" Grid.ColumnSpan="2" Margin="140,0,49,0"/>
                                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButton}" Margin="0,0,6,0">
                                        <TextBlock Text="✎"/>
                                    </Button>
                                    <Button Style="{StaticResource IconButton}">
                                        <TextBlock Text="🗑"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <!-- Row 4 -->
                        <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="0,1,0,0">
                            <Grid Height="44">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="160"/>
                                </Grid.ColumnDefinitions>
                                <DockPanel Margin="16,0" VerticalAlignment="Center">
                                    <TextBlock Text="Eyelets"/>
                                </DockPanel>
                                <TextBlock Grid.Column="1" Text="800" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="35 LKR" VerticalAlignment="Center"/>
                                <ContentControl Grid.Column="2" VerticalAlignment="Center" Style="{StaticResource StatusChipGreen}" Content="In Stock" Grid.ColumnSpan="2" Margin="140,0,60,0"/>
                                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButton}" Margin="0,0,6,0">
                                        <TextBlock Text="✎"/>
                                    </Button>
                                    <Button Style="{StaticResource IconButton}">
                                        <TextBlock Text="🗑"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <!-- Row 5 -->
                        <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="0,1,0,0">
                            <Grid Height="44">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="160"/>
                                </Grid.ColumnDefinitions>
                                <DockPanel Margin="16,0" VerticalAlignment="Center">
                                    <TextBlock Text="Curtain Plates"/>
                                </DockPanel>
                                <TextBlock Grid.Column="1" Text="8" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="600 LKR" VerticalAlignment="Center"/>
                                <ContentControl Grid.Column="2" VerticalAlignment="Center" Style="{StaticResource StatusChipRed}" Content="Low Stock" Grid.ColumnSpan="2" Margin="140,0,49,0"/>
                                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButton}" Margin="0,0,6,0">
                                        <TextBlock Text="✎"/>
                                    </Button>
                                    <Button Style="{StaticResource IconButton}">
                                        <TextBlock Text="🗑"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ScrollViewer Height="192" Width="805"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
        <!-- Footer: pagination + New Inventory button -->
        <Grid Grid.Row="3" Margin="20,12,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- pagination (navigation bar down) -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"/>
            <!-- primary action -->
            <Button Style="{StaticResource PrimaryButton}" Content="+ New Inventory"  Background="#FF5B281C" Margin="613,-2,10,2" FontSize="15" FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>
