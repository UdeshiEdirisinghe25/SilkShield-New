<Window x:Class="SilkShield_New.View.InvoiceHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SilkShield_New.View"
        mc:Ignorable="d"
        Title="InvoiceHistory" Height="600" Width="1000">

    <Window.Resources>
        <local:StatusToBrushConverter x:Key="StatusToBrushConverter"/>
        <local:StatusToTextBrushConverter x:Key="StatusToTextBrushConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Invoice History" FontSize="30" FontWeight="Bold" VerticalAlignment="Center"/>

            <Border Grid.Column="1" Background="#F0F0F0" CornerRadius="15" Padding="5" Width="250" HorizontalAlignment="Right">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" BorderThickness="0" Background="Transparent" VerticalAlignment="Center" Margin="5,0,0,0"
                             d:Text="Search Here"/>
                    <TextBlock Grid.Column="1" Text="🔍" VerticalAlignment="Center" FontSize="16" Margin="0,0,5,0"/>
                </Grid>
            </Border>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,0,20,20">
            <Border Background="#F0F0F0" CornerRadius="15" Padding="10" Width="200" Margin="0,0,10,0">
                <TextBox BorderThickness="0" Background="Transparent" d:Text="From date"/>
            </Border>
            <Border Background="#F0F0F0" CornerRadius="15" Padding="10" Width="200">
                <TextBox BorderThickness="0" Background="Transparent" d:Text="To date"/>
            </Border>
        </StackPanel>

        <Border Grid.Row="2" Background="White" CornerRadius="20" Padding="20" Margin="20,0,20,20">
            <DataGrid x:Name="InvoiceDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" 
                      GridLinesVisibility="None" BorderThickness="0" IsReadOnly="True"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Invoice ID" Binding="{Binding InvoiceID}" Width="*"/>
                    <DataGridTextColumn Header="Customer" Binding="{Binding Customer}" Width="*"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="*"/>
                    <DataGridTemplateColumn Header="Status" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="10" Padding="5,2" HorizontalAlignment="Left"
                                        Background="{Binding Status, Converter={StaticResource StatusToBrushConverter}}">
                                    <TextBlock Text="{Binding Status}" 
                                               Foreground="{Binding Status, Converter={StaticResource StatusToTextBrushConverter}}" 
                                               FontWeight="Bold" TextAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="View" Width="0.5*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="👁️" Background="Transparent" BorderThickness="0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Copy" Width="0.5*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="📋" Background="Transparent" BorderThickness="0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>