<Window x:Class="SilkShield_New.View.InvoiceHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SilkShield_New.View"
        mc:Ignorable="d"
        Title="InvoiceHistory" Height="600" Width="1000">

    <Window.Resources>
        <!-- Converters -->
        <local:StatusToBrushConverter x:Key="StatusToBrushConverter"/>
        <local:StatusToTextBrushConverter x:Key="StatusToTextBrushConverter"/>
        <local:TextNotEmptyConverter x:Key="TextNotEmptyConverter"/>

        <!-- Watermark / Placeholder TextBox Style -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="Watermark"
                                       Text="{TemplateBinding Tag}"
                                       Margin="5,0,0,0"
                                       Foreground="Gray"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header + Search -->
        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Invoice History"
                       FontSize="30" FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <Border Grid.Column="1" Background="#F0F0F0" CornerRadius="15"
                    Padding="5" Width="250" HorizontalAlignment="Right">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="SearchTextBox"
                             Grid.Column="0"
                             Style="{StaticResource WatermarkTextBox}"
                             Tag="Search Here"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalAlignment="Center"
                             Margin="5,0,0,0"/>

                    <Button x:Name="ClearSearchButton"
                            Grid.Column="1"
                            Content="✖"
                            FontSize="12"
                            FontWeight="Bold"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Gray"
                            VerticalAlignment="Center"
                            Margin="0,0,5,0"
                            Click="ClearSearchButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox, Converter={StaticResource TextNotEmptyConverter}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Grid.Column="2" Text="🔍"
                               VerticalAlignment="Center" FontSize="16"
                               Margin="0,0,5,0"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Date Filters with Labels and Clear Button -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,0,20,20" VerticalAlignment="Center">
            <!-- From Label + DatePicker -->
            <StackPanel Orientation="Horizontal" Margin="0,0,10,0" VerticalAlignment="Center">
                <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="Bold"/>
                <Border Background="Transparent" BorderBrush="DarkGray" BorderThickness="1" CornerRadius="15" Padding="5" Width="200">
                    <DatePicker x:Name="FromDatePicker"
                                SelectedDate="{x:Null}"
                                DisplayDateStart="2000-01-01"
                                DisplayDateEnd="2100-12-31"
                                BorderThickness="0"
                                Background="Transparent"/>
                </Border>
            </StackPanel>

            <!-- To Label + DatePicker -->
            <StackPanel Orientation="Horizontal" Margin="0,0,10,0" VerticalAlignment="Center">
                <TextBlock Text="To:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="Bold"/>
                <Border Background="Transparent" BorderBrush="DarkGray" BorderThickness="1" CornerRadius="15" Padding="5" Width="200">
                    <DatePicker x:Name="ToDatePicker"
                                SelectedDate="{x:Null}"
                                DisplayDateStart="2000-01-01"
                                DisplayDateEnd="2100-12-31"
                                BorderThickness="0"
                                Background="Transparent"/>
                </Border>
            </StackPanel>

            <!-- Small Curved Clear Button -->
            <Button Width="80" Height="28"
                    Click="ClearDates_Click"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="#FF5B281C"
                    BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                Clear
            </Button>
        </StackPanel>

        <!-- DataGrid -->
        <Border Grid.Row="2" Background="White" CornerRadius="20" Padding="20" Margin="20,0,20,20">
            <DataGrid Grid.Row="2"
          ItemsSource="{Binding Invoices}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          RowHeight="35"
          HeadersVisibility="Column"
          GridLinesVisibility="None"
          Background="White"
          Margin="20,0,20,10"
          SelectionMode="Single"
          SelectionUnit="FullRow">

                <DataGrid.Columns>
                    <!-- Invoice ID -->
                    <DataGridTextColumn Header="Invoice ID" Binding="{Binding InvoiceID}" Width="*" />

                    <!-- Customer -->
                    <DataGridTextColumn Header="Customer" Binding="{Binding Customer}" Width="2*" />

                    <!-- Date -->
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*" />

                    <!-- Amount -->
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=C}" Width="*" />

                    <!-- Status -->
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />

                    <!-- Action Buttons -->
                    <DataGridTemplateColumn Header="Action" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                                    <!-- View Button -->
                                    <Button Content="👁" Margin="2"
                                Background="Transparent" BorderBrush="Transparent"
                                FontSize="12" Cursor="Hand"
                                Foreground="DarkGray"
                                Command="{Binding DataContext.ViewInvoiceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}" />

                                    <!-- Edit Button -->
                                    <Button Content="✏" Margin="2"
                                Background="Transparent" BorderBrush="Transparent"
                                FontSize="12" Cursor="Hand"
                                Foreground="DarkGray"
                                Command="{Binding DataContext.EditInvoiceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}" />

                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </Border>
    </Grid>
</Window>
